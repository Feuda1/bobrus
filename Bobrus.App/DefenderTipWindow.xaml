<Window x:Class="Bobrus.App.DefenderTipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DefenderTipWindow" 
        Height="200" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="#CC1A202C" CornerRadius="12" BorderThickness="1" BorderBrush="#4A5568">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="⚠️ Внимание: Требуется действие" 
                       Foreground="#FEB2B2" 
                       FontSize="18" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       Text="Откроется окно Защитника Windows. Необходимо вручную отключить ВСЕ галочки, чтобы продолжить установку." 
                       Foreground="White" 
                       FontSize="15" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,15"/>

            <Button Grid.Row="2"
                    Content="Понятно, закрыть подсказку"
                    Click="OnCloseClicked"
                    Background="#2B6CB0"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,8"
                    HorizontalAlignment="Center"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>
