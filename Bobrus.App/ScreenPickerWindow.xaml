<Window x:Class="Bobrus.App.ScreenPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор экрана"
        Width="480"
        Height="360"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource PanelBrush}">
    <Border BorderBrush="{DynamicResource BorderBrushMuted}"
            BorderThickness="1"
            CornerRadius="10"
            Padding="16"
            Background="{DynamicResource PanelBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Выберите экран для надписи"
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                <Button Content="✕"
                        Grid.Column="1"
                        Width="32"
                        Height="28"
                        Style="{StaticResource WindowIconButton}"
                        Click="OnCancel" />
            </Grid>

            <ListBox x:Name="ScreenList"
                     Grid.Row="1"
                     Margin="0 12 0 12"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionMode="Single"
                     MouseDoubleClick="OnScreenDoubleClick"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0 6 0 0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Focusable" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd"
                                            Padding="12"
                                            CornerRadius="10"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrushMuted}"
                                            BorderThickness="1"
                                            MinWidth="200">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBlueBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBlueBrush}" />
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource NavButtonActiveBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="Bd" Property="Opacity" Value="0.6" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Resolution}" Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Text="{Binding PrimaryLabel}" Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 0 0 0">
                <Button Content="Отмена"
                        Width="140"
                        Style="{StaticResource BaseButton}"
                        Click="OnCancel" />
                <Button Content="Выбрать"
                        Width="140"
                        Margin="10 0 0 0"
                        Style="{StaticResource PrimaryButton}"
                        Click="OnSelect" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
